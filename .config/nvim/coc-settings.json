{
  "coc.preferences.extensionUpdateCheck": "daily",
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "list.previousKeymap": "<C-k>",
  "list.nextKeymap": "<C-j>",
  "coc.preferences.formatOnSave": true,
  // this config is really important in showing diagnostic info
  // it is combined with   keyset("n", "<M-\\>", "<Plug>(coc-diagnostic-info)", { noremap = true, silent = true })
  "diagnostic.enableMessage": "jump",
  // "diagnostic.messageTarget": "float",
  // "hover.autoHide": true,
  // the overall codelens configuration
  "codeLens.enable": true,
  "codeLens.display": true,
  // the overall inlayhint configuration
  "inlayHint.enable": true,
  "inlayHint.refreshOnInsertMode": true,
  "inlayHint.display": true,
  // lua settings
  // this config is very important in suppressing undefined global vim 
  "Lua.diagnostics.globals": [
    "vim"
  ],
  "Lua.hint.enable": true,
  "Lua.hint.setType": true,
  "Lua.codeLens.enable": true,
  // ts settings here 
  "tsserver.enable": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.paths": true,
  "javascript.suggest.paths": true,
  "typescript.autoClosingTags": true,
  "vue.codeLens.enabled": true,
  "vue.inlayHints.missingProps": true,
  "vue.inlayHints.optionsWrapper": true,
  "vue.inlayHints.vBindShorthand": true,
  "vue.inlayHints.destructuredProps": true,
  "vue.inlayHints.inlineHandlerLeading": true,
  "vue.codeActions.enabled": true,
  // translator
  "translator.proxy": "http://127.0.0.1:7897",
  "hover.floatConfig": {
    "focusable": true,
    "border": true,
    "rounded": true,
    "borderhighlight": "CocFloating"
  },
  "diagnostic.floatConfig": {
    "focusable": true,
    "border": true,
    "rounded": true,
    "borderhighlight": "CocFloating"
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "borderhighlight": "CocFloating"
  },
  "languageserver": {}
}
